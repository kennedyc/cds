{"ts":1367944662931,"silentsave":true,"restoring":false,"patch":[[{"diffs":[[1,"<!DOCTYPE html>\n<html>\n  <head>\n    <title>CD Collection: <%=item.name%></title>\n    <link rel=\"stylesheet\" href=\"/style.css\">\n  </head>\n  <body>\n    <a rel=\"index\" href=\"/\"><h1>CD Collection</h1></a>\n    <div id=\"genre\" itemprop=\"genre\" itemscope itemtype=\"http://schema.org/MusicRecording\">\n    <dl>\n      <dt>Name</dt>\n      <dd itemprop=\"name\"><%=item.name%></dd>\n      <dt>CDs in this genre</dt>\n      <dd itemscope itemtype=\"http://schema.org/MusicAlbum\">\n      <a itemprop=\"name\" href=\"/cds/<%=item.cd%>\"><%=item.cd%></a></dd>\n    </dl>\n    </div>\n    <div class=\"form\">\n      <h2>Update genre</h2>\n      <form method=\"post\" action=\"/genres/<%=item._id%>\" name=\"update-genre\">\n        <input type=\"hidden\" name=\"_method\" value=\"put\">\n        <!-- The line above tells the server to treat this as a PUT request. -->\n        <label>Name: \n          <input name=\"item[name]\" value=\"<%=item.name%>\" type=\"text\" required>\n        </label>\n        <label>CD: \n          <select name=\"item[cd]\" required>\n            <% related_items.forEach(function(related_item) { %>\n            <option value=\"<%=related_item._id%>\"\n              <% if (related_item._id === item.cd) { %>selected<% } %>>\n              <%=related_item.name%>\n            </option>\n            <% }); %>\n          </select>\n        </label>\n        <button>Update</button>\n      </form>\n    </div>\n        <div>\n          <form class=\"delete-genre\" method=\"post\" action=\"/genres/<%=item._id%>\">\n            <input type=\"hidden\" name=\"_method\" value=\"delete\">\n            <input type=\"hidden\" name=\"item[id]\" value=\"<%=item.id%>\">            \n            <input type=\"hidden\" name=\"item[rev]\" value=\"<%=item._rev%>\">  \n            <button>Delete this genre</button>\n          </form>\n    </div>\n  </body>\n</html>"]],"start1":0,"start2":0,"length1":0,"length2":1780}]],"length":1780}
