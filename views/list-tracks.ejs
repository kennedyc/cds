<!DOCTYPE html>
<html>
  <head>
    <title>CD Collection: All Tracks</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body itemscope itemtype="http://schema.org/CollectionPage">
    <a rel="index" href="/"><h1>CD Collection</h1></a>
    <div id="track">
    <% if (items.length > 0) { %>
    <ul>
      <% items.forEach(function(item) { %>
      <li itemprop="track" itemscope itemtype="http://schema.org/MusicRecording">
      <a itemprop="name" href="/tracks/<%=item._id%>"><%=item.name%></a></li>
      <% }); %>
    </ul>
    <% } else { %>
    <div>No tracks found.</div>
    <% } %>
    </div>
    <div class="form">
      <h2>Search for tracks by name</h2>
      <form method="get" action="/tracks/" class="track">
        <label>Track name: <input name="name"></label>
        <button>Search</button>
      </form>
    </div>
  </body>
</html>
